@model IEnumerable<MvcPlaystations.Models.Playstations>

@{
    ViewData["Title"] = "Hidden";
}
<h1>Hidden Playstations</h1>
<table>
    <thead>
        <tr>
           <th>
                @Html.DisplayNameFor(model => model.ModelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StorageCapacityGB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Colour)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>
                    @item.ModelName
                </td>
                <td>
                    @item.Manufacturer
                </td>
                <td>
                    @item.StorageCapacityGB
                </td>
                <td>
                    @item.ReleaseDate
                </td>
                <td>
                    @item.Version
                </td>
                <td>
                    @item.Colour
                </td>
            </tr>
        }
    </tbody>
</table>
<form asp-controller="Playstations" asp-action="ReturnHiddenPlaystations" method="post">
    <input type = "submit" value = "Delete Hidden Games" class="btn btn-danger"/>
</form>